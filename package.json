{
  "name": "picklogic",
  "version": "1.0.0",
  "description": "A JS engine to pick among JSON objects based on simple logic conditions",
  "main": "lib/index.js",
  "files": [ 
      "lib/index.js"
  ],
  "repository": "git@github.com:GlobalStrategies/picklogic.git",
  "author": "Elon Danziger <elon.danziger@globalstrategies.org>",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build:commonjs": "babel src -d lib",
    "build:umd": "cross-env FILE_NAME=picklogic webpack",
    "build:umd:min": "cross-env NODE_ENV=production npm run build:umd",
    "clean": "rimraf lib dist",
    "build": "npm run clean && npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "test": "jest src/",
    "demo": "rimraf lib && npm run build:commonjs && node ./lib/demo.js"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-flow": "^7.9.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "cross-env": "^7.0.2",
    "enquirer": "^2.3.5",
    "eslint-plugin-react": "^7.20.0",
    "flow-bin": "^0.125.1",
    "rimraf": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "global": "^4.4.0"
  }
}
